{% extends 'base.html.twig' %}

{% block title %}Envoyer un nouveau ticket{% endblock %}

{% block body %}

    <section class="container w-75 mx-auto my-5">
        <h1 class="text-center mb-3">Nouveau ticket</h1>
        {{ form_start(newTicketForm) }}  
            {{ form_row(newTicketForm.title) }}      
            {{ form_row(newTicketForm.content) }}     
            <button type="submit" class="btn btn-primary btn-lg my-3">Envoyer</button>
        {{ form_end(newTicketForm) }}
    </section>

{% endblock %}